@model Library.Web.Models.Files.FileContainerHelperModel
@{
    ViewData["Title"] = "Upload";
}


<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" method="post" asp-action="Upload" asp-controller="FileContainer">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

        


            <div class="form-group">
                <label asp-for="FileType"></label>
                <select asp-for="FileType" asp-items="@ViewBag.FileTypeList"></select>

            </div>

            <div class="form-group">
                <label asp-for="TheFile" class="custom-file-input"></label>
                <input asp-for="TheFile" class="form-control" />

            </div>





            <button type="submit" class="btn-primary">Upload</button>
        </form>

    </div>
</div>